<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.ChordMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
    </style>

    <!-- Our main theme extends the base theme -->
    <style name="Theme.ChordMate" parent="Base.Theme.ChordMate" />

    <!-- Legacy reference for backward compatibility -->
    <style name="AppTheme" parent="Theme.ChordMate" />

    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.ChordMate.Fullscreen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Inherit from your main theme and customize as needed -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Additional customizations -->
    </style>
</resources>